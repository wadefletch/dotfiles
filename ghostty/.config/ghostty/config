# disable auto-update since we're letting homebrew handle this
auto-update = "off"

# zsh shell integration
shell-integration = "zsh"

# cross-platform aesthetics
font-family = "IosvekaTerm Nerd Font Mono"
theme = "TokyoNight Storm"
background-opacity = "0.95"
background-blur-radius = "10"
window-padding-x = "10"
window-padding-y = "10"

# macos-specific aesthetics
macos-icon = "xray"
macos-titlebar-style = "transparent"
macos-titlebar-proxy-icon = "hidden"

# pane navigation
keybind = "shift+ctrl+h=goto_split:left"
keybind = "shift+ctrl+j=goto_split:bottom"
keybind = "shift+ctrl+k=goto_split:top"
keybind = "shift+ctrl+l=goto_split:right"

# quick terminal (âŒ˜` = command + grave (backtick))
